<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_card_margin"
            android:layout_marginStart="@dimen/common_card_margin"
            android:layout_marginEnd="@dimen/common_card_margin"
            android:clickable="true"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/common_paddin_default"
                android:contentDescription="@string/hard_code_text">

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="@dimen/image_common_size"
                    android:layout_height="@dimen/image_common_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_launcher_background" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_card_comprar"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="@string/btn_comprar"
                    app:icon="@drawable/ic_comprar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_card"
                    app:layout_constraintTop_toTopOf="@id/image_card" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_card_cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_cancelar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_card_comprar"
                    app:layout_constraintTop_toTopOf="@id/btn_card_comprar"

                    />

                <TextView
                    android:id="@+id/text_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/card_text"
                    app:layout_constraintStart_toEndOf="@id/image_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textAppearance="?attr/textAppearanceBody1" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</layout>